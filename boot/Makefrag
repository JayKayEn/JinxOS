$(OBJDIR)/boot/boot: $(OBJDIR)/boot/boot.o $(OBJDIR)/boot/bmain.o
	@$(LD) $(LFLAGS) -N -e start -Ttext 0x7C00 -o $@ $^
	@$(COPY) -S -O binary -j .text $@ $@
	@perl boot/sign.pl $@
	@echo " <+> boot/boot"

$(OBJDIR)/boot/%.o: boot/%.S
	@$(CC) $(CFLAGS) -O3 -c -o $@ $< > /dev/null
	@echo " <+> $<"

$(OBJDIR)/boot/%.o: boot/%.c
	@$(CC) $(CFLAGS) -Os -c -o $@ $<
	@echo " <+> $<"
